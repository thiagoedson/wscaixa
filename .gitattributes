# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf diff=php

# JSON files
*.json text eol=lf
*.lock text eol=lf -diff

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary

# Archives
*.7z binary
*.jar binary
*.rar binary
*.zip binary
*.gz binary
*.bzip2 binary
*.tgz binary
*.tar.gz binary

# Composer
composer.lock -diff

# Exclude from archives
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
.vscode export-ignore
.idea export-ignore
tests export-ignore
docs export-ignore
*.md export-ignore
phpunit.xml export-ignore
.travis.yml export-ignore
.scrutinizer.yml export-ignore
